---
import fondo from '../../public/toast-sandwich-with-chicken-chunks-and-egg.jpg';
import logo from '../assets/images/logo-white.png';
---

<header id="header" class=`header relative w-full h-screen text-white bg-center bg-cover bg-fixed` style=`background-image: url('${fondo}')`>

  <!-- Top Menu -->
  <div class="top-menu py-4 w-full lg:flex lg:justify-center lg:max-w-[90%] lg:mx-auto">
    <ul class="flex justify-between items-center m-auto w-full max-w-[90%] text-[12px] lg:justify-start lg:text-[16px]">
      <li class="p-2 font-bold bg-[#ffffff33] lg:mr-8">Open</li>
      <li class="lg:mr-8">Mon-Wed: 11a-9p</li>
      <li>Thurs-sat: 11a-9p</li>
    </ul>
    <div class="max-lg:hidden lg:flex lg:justify-end lg:items-center lg:w-[60%]">
      <li>(123)456-789</li>
      <li class="lg:ml-8">Av. Serlas 523, St. Mortz</li>
    </div>
  </div>

  <!-- Separator -->
  <p class="w-full border-b border-slate-500"></p>

  <!-- Main Nav -->
  <!-- Desktop Nav -->
  <nav class="nav-desktop justify-between items-center max-lg:hidden nav m-auto pt-4 max-w-[90%] lg:flex">
    <ul class="flex w-[30%] lg:w-[15%]">
      <li class="pr-6 max-w-[100px]"><a href="#our-menus">Our Menus</a></li>
      <li class="pr-6 max-w-[120px]"><a href="#catering-and-events">Our Catering & Events</a></li>
      <li class="max-w-[90px]"><a href="#our-location">Our Location</a></li>
    </ul>
    <img src=`${logo}` class="w-[175px] lg:flex lg:justify-center" alt="logo">
    <a href="https://api.whatsapp.com/send?phone=1234567890" target="_blank" class="flex justify-end w-[30%] transition-colors delay-100 lg:justify-center lg:py-4 lg:w-[15%] lg:text-center lg:border lg:border-[#fff] lg:hover:bg-[#826A45] lg:hover:border-[#826A45]">Make a Reservation</a>
  </nav>
  
  <!-- Mobile Nav -->
  <nav class="nav-mobile flex justify-between my-4 mx-auto w-full max-w-[90%] lg:hidden">
    <img src="../../public/static/images/logo-white.png" class="w-[120px]" alt="logo">
    <span class="icon-menu cursor-pointer">
      <img src="../../public/static/icons/bx-menu-alt-right.svg" class="w-[50px]" alt="icon-menu">
    </span>
  </nav>
  
  <!-- Dropdown -->
  <ul class="dropdown hidden absolute top-0 w-full h-screen bg-[#252121] animate-[show_0.5s_ease-in-out] lg:hidden">
    <div class="icon-close-menu flex justify-end mt-[20px] mr-[10px] cursor-pointer">
      <img src="../../public/static/icons/bx-x.svg" class="w-[50px]" alt="icon-close-menu">
    </div>
    <div class="flex flex-col mt-[50px] items-center text-2xl">
      <li class="link1 mb-10"><a href="#our-menus">Our Menus</a></li>
      <li class="link2 mb-10"><a href="#catering-and-events">Catering & Events</a></li>
      <li class="link3 mb-10"><a href="#our-location">Our Location</a></li>
      <li class="link4"><a href="https://api.whatsapp.com/send?phone=1234567890" target="_blank">Make a Reservation</a></li>
    </div>
  </ul>

  <!-- Title and text optional -->
  <div class="flex flex-col items-center justify-center h-[450px] lg:pt-[250px]">
    <p class="mb-4 text-xl lg:font-medium">More flavor for less</p>
    <h2 class="text-6xl text-center lg:text-9xl lg:max-w-[600px] lg:text-left">Taste the Difference</h2>
  </div>

</header>

<script>

  const iconMenu = document.querySelector('.icon-menu')
  const dropdown = document.querySelector('.dropdown')
  const iconCloseMenu = document.querySelector('.icon-close-menu')
  const link1 = document.querySelector('.link1')
  const link2 = document.querySelector('.link2')
  const link3 = document.querySelector('.link3')
  const link4 = document.querySelector('.link4')

  iconMenu.addEventListener('click', () => {
    dropdown.classList.toggle('hidden')
  })

  iconCloseMenu.addEventListener('click', () => {
    dropdown.classList.toggle('hidden')
  })

  link1.addEventListener('click', () => {
    dropdown.classList.toggle('hidden')
  })

  link2.addEventListener('click', () => {
    dropdown.classList.toggle('hidden')
  })

  link3.addEventListener('click', () => {
    dropdown.classList.toggle('hidden')
  })

  link4.addEventListener('click', () => {
    dropdown.classList.toggle('hidden')
  })

</script>